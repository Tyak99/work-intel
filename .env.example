# AI Integration
ANTHROPIC_API_KEY=sk-ant-...

# GitHub Integration
GITHUB_TOKEN=ghp_...

# Jira Integration
JIRA_URL=https://your-company.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=...

# Nylas Integration (for Gmail & Calendar)
# Get these from https://dashboard.nylas.com after creating an app
NYLAS_CLIENT_ID=your_nylas_client_id
NYLAS_API_KEY=your_nylas_api_key

# Optional: Only needed for some authentication flows
# NYLAS_CLIENT_SECRET=your_nylas_client_secret

# Nylas API Configuration
# Use https://api.us.nylas.com for US region or https://api.eu.nylas.com for EU region
NYLAS_API_URI=https://api.us.nylas.com

# OAuth Callback URL (update with your production URL when deploying)
NYLAS_REDIRECT_URI=http://localhost:3004/api/auth/nylas/callback

# Supabase (for storing Nylas OAuth grants)
# Get these from https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key

# Email (Resend)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_...
EMAIL_FROM_ADDRESS=reports@work-intel.vercel.app

# Cron Authentication
# Generate a random secret: openssl rand -hex 32
CRON_SECRET=your_cron_secret