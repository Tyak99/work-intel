# AI Integration
ANTHROPIC_API_KEY=sk-ant-...

# GitHub Integration (Legacy PAT — still supported for existing teams)
GITHUB_TOKEN=ghp_...

# GitHub App (OAuth for team GitHub integration)
# Create a GitHub App at https://github.com/settings/apps/new
# Permissions needed (read-only): Contents, Pull requests, Metadata, Members
# Callback URL: https://your-domain.com/api/auth/github/callback
GITHUB_APP_ID=123456
GITHUB_APP_SLUG=work-intel
GITHUB_APP_CLIENT_ID=Iv1.abc123
GITHUB_APP_CLIENT_SECRET=your_client_secret
# Base64-encoded PEM private key: cat private-key.pem | base64 -w 0
GITHUB_APP_PRIVATE_KEY=base64_encoded_private_key

# Jira Integration (Legacy - API Token)
JIRA_URL=https://your-company.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=...

# Atlassian OAuth 2.0 (for Team Jira Integration)
# Create an OAuth 2.0 app at https://developer.atlassian.com/console/myapps/
ATLASSIAN_CLIENT_ID=your_atlassian_client_id
ATLASSIAN_CLIENT_SECRET=your_atlassian_client_secret
ATLASSIAN_REDIRECT_URI=http://localhost:3004/api/auth/atlassian/callback

# Nylas Integration (for Gmail & Calendar)
# Get these from https://dashboard.nylas.com after creating an app
NYLAS_CLIENT_ID=your_nylas_client_id
NYLAS_API_KEY=your_nylas_api_key

# Optional: Only needed for some authentication flows
# NYLAS_CLIENT_SECRET=your_nylas_client_secret

# Nylas API Configuration
# Use https://api.us.nylas.com for US region or https://api.eu.nylas.com for EU region
NYLAS_API_URI=https://api.us.nylas.com

# OAuth Callback URL (update with your production URL when deploying)
NYLAS_REDIRECT_URI=http://localhost:3004/api/auth/nylas/callback

# Supabase (for storing Nylas OAuth grants)
# Get these from https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
# Service role key — used for server-side API route database access (bypasses RLS)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Encryption key for securing OAuth tokens (GitHub, Jira) at rest
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your_64_char_hex_string

# Email (Resend)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_...
EMAIL_FROM_ADDRESS=reports@work-intel.vercel.app

# Cron Authentication
# Generate a random secret: openssl rand -hex 32
CRON_SECRET=your_cron_secret

# PostHog Analytics (optional)
# Create a free project at https://posthog.com and get your project API key
NEXT_PUBLIC_POSTHOG_KEY=phc_...
# NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com